//extends layout
doctype html
head
    script(src='https://code.jquery.com/jquery-3.3.1.js', integrity='sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60=', crossorigin='anonymous')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js', integrity='sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa', crossorigin='anonymous')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin='anonymous')
    link(rel='stylesheet', href='/stylesheets/style.css')

body
    form#logout(action='/logout', method='post', role='form', style='display: block;')
        input(value='Log out', type='submit', id='logoutButton')
    br
    .container
        #myModal.modal.fade(role='dialog')
            .modal-dialog
                // Modal content
                .modal-content
                    .modal-header
                        button.close(type='button', data-dismiss='modal') Ã—
                    .modal-body
                        .center
                            img(src='images/318.jpg')
                    .modal-footer
                        button.btn.btn-default(type='button', data-dismiss='modal') Close

    .center
        block content
            table
                tbody
                    tr
                        th ID
                        th Car reg plate
                        th Timestamp
                        th Valid permit
                        th Nct expiry date
                        th GPS coord
                        th Altitude
                        th Car make
                        th Car colour
                        th Car type
                        th Proof

                    each user in car_data
                        td=user.id
                        td=user.car_reg
                        td=user.date
                        td=user.valid_permit
                        td=user.nct
                        td
                            a(href='http://maps.google.com?q='+user.gps_coord target="_blank") #{user.gps_coord}
            
                        td=user.altitude
                        td=user.car_make
                        td=user.car_colour
                        td=user.car_body
                         td
                            button(type='button', class='regPlateButton' id=user.id) Proof
                        tr




    script.
        $(document).on('click', '.regPlateButton', function () {
            var myid=this.id;
            $.get('images/' + this.id + '.jpg')
                .done(function () {
                    $(".modal-body").html("<img src=" + "images/" + myid + '.jpg' + " height='50%', width='50%'>");
                    // exists code
                }).fail(function () {
                $(".modal-body").html("<p> Image not available</p>");
            });



            $('#myModal').modal({
                show: 'true'
            });
        });
        $('.modal').click(function (e) {
            $(".modal-dialog").attr("data-dismiss", "modal");
        });



